<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_left_right_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每天说一句晚安"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/view_margin_top_buttom_large"
            android:textSize="@dimen/font_size_large"/>

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_top_buttom"
            android:text="每晚12：00前打卡"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/view_margin_top_buttom_supersmall"
            android:textSize="@dimen/font_size_context"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ry_item_lovetime_one_img_height"
            android:background="@drawable/btn_memorialday_delete">

            <ImageView
                android:id="@+id/ivSubImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_default_memorailday"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_default"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="打  卡"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_context"
                android:background="@drawable/btn_round_white"
                android:layout_marginBottom="@dimen/activity_margin_left_right"
                android:layout_marginLeft="@dimen/activity_margin_left_right"
                android:layout_marginRight="@dimen/activity_margin_left_right"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>