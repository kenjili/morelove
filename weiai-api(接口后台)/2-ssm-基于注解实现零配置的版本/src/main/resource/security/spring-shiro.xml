<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!-- 注入SeucurityManager-->
        <property name="securityManager" ref="securityManager"/>

        <property name="filters">
            <map>
                <entry key="authc">
                    <bean class="wjy.weiai7lv.shiro.WeiAi7LvUserAuthcFilter"/>
                </entry>
                <entry key="roles">
                    <bean class="wjy.weiai7lv.shiro.WeiAi7LvRolesAuthorizationFilter"/>
                </entry>
            </map>
        </property>

        <property name="filterChainDefinitions">
            <!-- 需要限制角色访问的资源使用roles,否则不需要配置 -->
            <value>
                /=anon
                /sms/send=anon
                /user/login=anon
                /user/regist=anon
                /user/logout=authc
                /lover/record=roles[lover]
                /lover/*=authc
                /found/*=authc
                /**=roles[lover]
            </value>
        </property>

        <!-- 修改shiro的默认登录页面的url,认证不通过时跳转 -->
        <!--<property name="loginUrl" value="/error/notLogin"/>-->
        <!-- 修改登录成功（认证成功）默认跳转页面，不配置则跳转至”/” -->
        <!--<property name="successUrl" value="/error/loginSuccess"/>-->
        <!-- 修改没有权限（没有授权）默认跳转的页面 -->
        <!--<property name="unauthorizedUrl" value="/error/unauthorized"/>-->
    </bean>


    <!-- 配置shiro的SeucurityManager -->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="weiAi7LvRealm"/>
    </bean>

    <!-- 配置一个realm -->
    <bean id="weiAi7LvRealm" class="wjy.weiai7lv.shiro.WeiAi7LvRealm"/>

</beans>