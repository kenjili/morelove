<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/darker_gray"/>
            <stroke android:width="0.5dp" android:color="#fcfcfc"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:topLeftRadius="@dimen/view_margin_left_right_10"
                android:topRightRadius="@dimen/view_margin_left_right_10"
                android:bottomLeftRadius="@dimen/view_margin_left_right_10"
                android:bottomRightRadius="@dimen/view_margin_left_right_10" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/darker_gray"/>
            <stroke android:width="0.5dp" android:color="#fcfcfc"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:topLeftRadius="@dimen/view_margin_left_right_10"
                android:topRightRadius="@dimen/view_margin_left_right_10"
                android:bottomLeftRadius="@dimen/view_margin_left_right_10"
                android:bottomRightRadius="@dimen/view_margin_left_right_10" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/app_theme_color"/>
            <stroke android:width="0.5dip" android:color="@android:color/white"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:topLeftRadius="@dimen/view_margin_left_right_10"
                android:topRightRadius="@dimen/view_margin_left_right_10"
                android:bottomLeftRadius="@dimen/view_margin_left_right_10"
                android:bottomRightRadius="@dimen/view_margin_left_right_10" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/app_theme_color"/>
            <stroke android:width="0.5dip" android:color="@android:color/white"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:topLeftRadius="@dimen/view_margin_left_right_10"
                android:topRightRadius="@dimen/view_margin_left_right_10"
                android:bottomLeftRadius="@dimen/view_margin_left_right_10"
                android:bottomRightRadius="@dimen/view_margin_left_right_10" />
        </shape>
    </item>

</selector>
