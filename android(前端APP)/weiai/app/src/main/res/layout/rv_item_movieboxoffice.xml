<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="@dimen/view_margin_top_buttom"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMovieImg"
        android:layout_width="@dimen/ry_item_movie_boxoffice_img_width"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/image_welcome"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/view_margin_left_right_10"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewContextStyle"
            android:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/view_margin_top_buttom_small"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票房："
                android:textSize="@dimen/font_size_small"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvBoxOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99999"
                android:textSize="@dimen/font_size_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/view_margin_top_buttom_small"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均票价："
                android:textSize="@dimen/font_size_small"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvPiaoJia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34.50"
                android:textSize="@dimen/font_size_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/view_margin_top_buttom_small"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上映天数："
                android:textSize="@dimen/font_size_small"
                android:visibility="gone"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:visibility="gone"
                android:textSize="@dimen/font_size_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上映日期："
                android:textSize="@dimen/font_size_small"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-10-01"
                android:textSize="@dimen/font_size_small"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>